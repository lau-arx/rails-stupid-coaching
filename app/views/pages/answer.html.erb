<h1>Stupid coaching</h1>
<div class="questions">
  <p><%= @question.capitalize %></p>
  <p><em>-You</em></p>
</div>

<div class="answers">
  <%if @question.include?('?') %>
    <p><strong><%= "Silly question, get dressed and go to work!" %></strong></p>
    <p><em><%= "-Your coach" %></em></p>
  <% else %>
    <p><strong><%="I don't care, get dressed and go to work!" %></strong></p>
    <p><em><%= "-Your coach" %></em></p>
  <% end %>
</div>

<div class="link-back">
  <%= link_to 'Ask another question', ask_path %>
</div>
